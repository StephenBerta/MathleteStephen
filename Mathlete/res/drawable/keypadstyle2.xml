<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/Red"
                android:endColor="@color/Gray"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/Black" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="@color/White"
                android:endColor="@color/BlackOverlay"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="@color/White" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="20dp"
                android:right="10dp"
                android:bottom="20dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <stroke
                android:width="5dp"
                android:color="@color/Red" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>